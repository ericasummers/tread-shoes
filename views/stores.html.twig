{% extends "tread_template.html.twig" %}

{% block leftsection %}

    <h3>Tread Stores</h3>

    {% if stores is not empty %}
        {% for store in stores %}
            <h4><a href="/store/{{ store.getId }}">{{ store.getName }}</a>
                <div class="inline-forms">
                    <form action="/store/{{ store.getId }}/edit" method="post" style="display: inline">
                        <button type="submit" class="btn btn-success"><i class="fa fa-pencil-square" aria-hidden="true"></i> Update</button>
                    </form>
                    <form action="/store/{{ store.getId }}" method="post" style="display: inline">
                        <input type="hidden" name="_method" value="delete">
                        <button type="submit" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Delete</button>
                    </form>
                </div>
            </h4>
        {% endfor %}
    {% else %}
        <h4>There are no stores currently in the database.</h4>
    {% endif %}

{% endblock %}

{% block rightsection %}

    <h4>Add a Store:</h4>

    <form action="/add_store" method="post">
        <div class="form-group">
            <label for="name">Store Name:</label>
            <input type="text" name="name" placeholder="Shoetopia" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" name="address" placeholder="12 SW Water St, Portland, OR 97219" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="phone_number">Phone Number:</label>
            <input type="text" name="phone_number" placeholder="503-112-2020" class="form-control" required>
        </div>

            <button type="submit" class="btn btn-info"><i class="fa fa-plus-square" aria-hidden="true"></i> Add Store!</button>
        </div>
    </form>

{% endblock %}
