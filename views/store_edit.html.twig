{% extends "tread_template.html.twig" %}

{% block rightsection %}

    <h3>Current Store Info</h3>
    <br>

    <h4>Name: {{ store.getName }}</h4>
    <h4>Address: {{ store.getAddress }}</h4>
    <h4>Phone Number: {{ store.getPhoneNumber }}</h4>
    <br>
    <a href="/store/{{ store.getId }}"><i class="fa fa-home" aria-hidden="true"></i> Back to Store Page</a>
    <br><br>
    <a href="/stores"><i class="fa fa-home" aria-hidden="true"></i> Back to Stores List</a>

{% endblock %}

{% block leftsection %}

<h3>Update Store:</h3>

<form action="/update_store/{{ store.getId }}" method="post">
    <input type="hidden" name="_method" value="patch">
    <div class="form-group">
        <label for="name">Store Name:</label>
        <input type="text" name="name" value="{{ store.getName }}" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="address">Address:</label>
        <input type="text" name="address" value="{{ store.getAddress }}" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="phone_number">Phone Number:</label>
        <input type="text" name="phone_number" value="{{ store.getPhoneNumber }}" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-info"><i class="fa fa-pencil-square" aria-hidden="true"></i> Update Store!</button>
</form>

{% endblock %}
